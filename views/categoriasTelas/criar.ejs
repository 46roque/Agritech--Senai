<%- include('../includes/header.ejs', {titulo: 'Lista categorias'}) %>

<main>
    <h2>Adicionar Categoria</h2>

    <form action="/categorias/novo" method="POST" class="form" style="background-color: white;">
        <div class="form-group">
            <label for="nome_categoria">Nome da categoria</label>
            <input type="text" id="nome_categoria" name="nome_categoria" require>
        </div>
        
        <div class="form-group">

                <button type="submit" class="btn text-white" style="background-color: #488727;" >Adicionar</button>
                <a href="/categorias" class="btn btn-danger">Cancelar</a>

                <% if(typeof mensagem != 'undefined') { %>
                    <p class="erro"><%= mensagem %> </p>
                <% } %>

    </form>
</main>


